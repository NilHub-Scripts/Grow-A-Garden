-- Fullscreen Ban GUI with fake countdown and kick
local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "BanScreen"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true

-- Fullscreen Frame
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(1, 0, 1, 0)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)

-- Main Ban Text
local banText = Instance.new("TextLabel", frame)
banText.Size = UDim2.new(1, 0, 0, 100)
banText.Position = UDim2.new(0, 0, 0.4, 0)
banText.Text = "YOU HAVE BEEN BANNED FROM GROW A GARDEN"
banText.TextColor3 = Color3.fromRGB(255, 0, 0)
banText.Font = Enum.Font.SourceSansBold
banText.TextScaled = true
banText.BackgroundTransparency = 1

-- Fake Time Counter Text
local timeText = Instance.new("TextLabel", frame)
timeText.Size = UDim2.new(1, 0, 0, 60)
timeText.Position = UDim2.new(0, 0, 0.5, 10)
timeText.Text = ""
timeText.TextColor3 = Color3.fromRGB(255, 255, 255)
timeText.Font = Enum.Font.SourceSansBold
timeText.TextScaled = true
timeText.BackgroundTransparency = 1

-- Fake Ban Timer Values
local years = 79000002
local months = 142
local days = 84
local hours = 126
local minutes = 1200
local seconds = 170000000

-- Animate countdown for seconds
local runService = game:GetService("RunService")
local startTime = tick()

-- Update text every frame
local connection
connection = runService.RenderStepped:Connect(function()
	local elapsed = tick() - startTime
	local displaySeconds = math.max(seconds - math.floor(elapsed * 5), 0)

	local text = string.format("Years: %d   Months: %d   Days: %d   Hours: %d   Minutes: %d   Seconds: %d",
		years, months, days, hours, minutes, displaySeconds)

	timeText.Text = text
end)

-- Kick after 10 seconds
task.delay(10, function()
	if connection then connection:Disconnect() end
	player:Kick("You have been banned from grow a garden, This ban is permanent join discord to appeal.")
end)
