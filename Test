-- LocalScript (e.g., place in StarterGui or inject via exploit)

local player = game:GetService("Players").LocalPlayer
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "ScaryMoment"
gui.ResetOnSpawn = false

-- Fullscreen scary image
local img = Instance.new("ImageLabel")
img.Size = UDim2.new(1, 0, 1, 0)
img.Position = UDim2.new(0, 0, 0, 0)
img.BackgroundTransparency = 1
img.Image = "rbxassetid://115221281063583" -- Your scary image
img.Parent = gui

-- Loud scream sound
local scream = Instance.new("Sound")
scream.SoundId = "rbxassetid://18925320031" -- Your new loud sound
scream.Volume = 10 -- Max volume
scream.Looped = false
scream.Parent = gui

-- Play sound
scream:Play()

-- Optional red flash effect
for i = 1, 6 do
	local flash = Instance.new("Frame")
	flash.BackgroundColor3 = Color3.new(1, 0, 0)
	flash.Size = UDim2.new(1, 0, 1, 0)
	flash.BackgroundTransparency = 0.7
	flash.ZIndex = 10
	flash.Parent = gui
	wait(0.1)
	flash:Destroy()
end

-- Auto-remove GUI after 5 seconds
wait(5)
gui:Destroy()
